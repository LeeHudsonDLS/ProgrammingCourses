#include <iostream>
using namespace std;

class Time
{
	friend Time operator+(const Time& lhs, const Time& rhs);

	public:
		Time(int h, int m): hrs(h), min(m){}
		Time():hrs(0),min(0){}

		//t+=t1  ---> t.operator+=(t1)
		//	      *this      rhs
		Time& operator+=(const Time& rhs);

		void display();

		//Cast an int to a time 
		Time(int m) : hrs(m/60), min(m%60){}

		//Cast a time to an int
		operator int();	
		
		
	private:
		int hrs,min;


};

Time& Time::operator+=(const Time& rhs)
{
	hrs += rhs.hrs;
	min += rhs.min;
	if(min >= 60)
	{
		hrs ++;
		min -=60;
	} 
	return *this;
}

void Time::display()
{
	cout << hrs << " : " << min << endl;
}

Time::operator int()
{
	return hrs*60 + min;
}


//free function
Time operator+(const Time& lhs, const Time& rhs)
{	
	Time result;
	result.hrs = lhs.hrs + rhs.hrs;
	result.min = lhs.min + rhs.min;
	return result;
}

int main()
{
	Time t1(3,45);
	Time t2(4,20);
	Time t3(120);
	Time t;
	int timeInt = int(t3);
	t = t1+t2;
	t1 += t2;
	t1.display();
	t3.display();
	cout << timeInt << endl;
}
